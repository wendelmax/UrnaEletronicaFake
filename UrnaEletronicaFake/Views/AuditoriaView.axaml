<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:UrnaEletronicaFake.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="UrnaEletronicaFake.Views.AuditoriaView"
             x:DataType="vm:AuditoriaViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrushDynamic}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="ðŸ“‹ Log de Auditoria" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="10">
                    <Button Content="ðŸ”„ Atualizar" 
                            Command="{Binding CarregarAuditoriasCommand}"
                            Background="{DynamicResource SecondaryBrushDynamic}" 
                            Foreground="White"
                            Padding="10,5"
                            Theme="{DynamicResource PrimaryButtonTheme}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1" 
                Background="{DynamicResource CardBrushDynamic}" 
                BorderBrush="{DynamicResource CardBorderBrushDynamic}" 
                BorderThickness="1" 
                CornerRadius="5" 
                Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="{DynamicResource HeaderBrushDynamic}" 
                        BorderBrush="{DynamicResource DividerBrushDynamic}" 
                        BorderThickness="0,0,0,1" 
                        Padding="20,15">
                    <TextBlock Text="HistÃ³rico de AÃ§Ãµes" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrushDynamic}"/>
                </Border>

                <ScrollViewer Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding Auditorias}" 
                                  Margin="20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,10" 
                                        Padding="20" 
                                        Background="{DynamicResource HeaderBrushDynamic}" 
                                        CornerRadius="5"
                                        BorderBrush="{DynamicResource CardBorderBrushDynamic}" 
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Tipo de AÃ§Ã£o -->
                                        <Border Grid.Row="0" Grid.Column="0" 
                                                Background="{DynamicResource SecondaryBrushDynamic}" 
                                                CornerRadius="10" 
                                                Padding="8,4" 
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding TipoAcao}" 
                                                       Foreground="White" 
                                                       FontSize="12" 
                                                       FontWeight="Bold"/>
                                        </Border>

                                        <!-- Data/Hora -->
                                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                                   Text="{Binding DataAcao}" 
                                                   FontSize="12" 
                                                   Foreground="{DynamicResource TextSecondaryBrushDynamic}"/>

                                        <!-- DescriÃ§Ã£o -->
                                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                                   Text="{Binding Descricao}" 
                                                   FontSize="14" 
                                                   FontWeight="Bold" 
                                                   Margin="0,10,0,5"
                                                   Foreground="{DynamicResource TextPrimaryBrushDynamic}"/>

                                        <!-- Detalhes -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                                    Orientation="Horizontal" 
                                                    Spacing="20">
                                            <TextBlock Text="{Binding Entidade, StringFormat='Entidade: {0}'}" 
                                                       FontSize="12" 
                                                       Foreground="{DynamicResource TextSecondaryBrushDynamic}"/>
                                            <TextBlock Text="{Binding Usuario, StringFormat='UsuÃ¡rio: {0}'}" 
                                                       FontSize="12" 
                                                       Foreground="{DynamicResource TextSecondaryBrushDynamic}"/>
                                            <TextBlock Text="{Binding IpAddress, StringFormat='IP: {0}'}" 
                                                       FontSize="12" 
                                                       Foreground="{DynamicResource TextSecondaryBrushDynamic}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Status -->
        <Border Grid.Row="2" 
                Background="{DynamicResource HeaderBrushDynamic}" 
                BorderBrush="{DynamicResource DividerBrushDynamic}" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="14" 
                       Foreground="{DynamicResource TextSecondaryBrushDynamic}"/>
        </Border>
    </Grid>
</UserControl> 