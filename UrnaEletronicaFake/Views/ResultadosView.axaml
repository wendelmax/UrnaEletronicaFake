<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:UrnaEletronicaFake.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="UrnaEletronicaFake.Views.ResultadosView"
             x:DataType="vm:ResultadosViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrushDynamic}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="ðŸ“ˆ Resultados da EleiÃ§Ã£o" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="10">
                    <ComboBox ItemsSource="{Binding Eleicoes}" 
                              SelectedItem="{Binding EleicaoSelecionada}"
                              Width="300"
                              Background="{DynamicResource SurfaceBrushDynamic}"
                              Foreground="{DynamicResource TextPrimaryBrushDynamic}"
                              Theme="{DynamicResource ModernTextBoxTheme}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Titulo}" Foreground="{DynamicResource TextPrimaryBrushDynamic}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Content="ðŸ”„ Atualizar" 
                            Command="{Binding CarregarResultadosCommand}"
                            Background="{DynamicResource SecondaryBrushDynamic}" 
                            Foreground="White"
                            Padding="10,5"
                            Theme="{DynamicResource PrimaryButtonTheme}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel>
                <!-- EstatÃ­sticas Gerais -->
                <Border Background="{DynamicResource CardBrushDynamic}" 
                        BorderBrush="{DynamicResource CardBorderBrushDynamic}" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Margin="0,0,0,20"
                        IsVisible="{Binding ResultadoEleicao}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="{DynamicResource HeaderBrushDynamic}" 
                                BorderBrush="{DynamicResource DividerBrushDynamic}" 
                                BorderThickness="0,0,0,1" 
                                Padding="20,15">
                            <TextBlock Text="EstatÃ­sticas Gerais" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrushDynamic}"/>
                        </Border>

                        <Grid Grid.Row="1" 
                              Margin="20" 
                              ColumnDefinitions="*,*,*,*">
                            
                            <Border Grid.Column="0" 
                                    Background="{DynamicResource SuccessBrushDynamic}" 
                                    CornerRadius="5" 
                                    Padding="15" 
                                    Margin="5">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Total de Votos" 
                                               FontSize="12" 
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding ResultadoEleicao.TotalVotos}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="White"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" 
                                    Background="{DynamicResource SecondaryBrushDynamic}" 
                                    CornerRadius="5" 
                                    Padding="15" 
                                    Margin="5">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Votos VÃ¡lidos" 
                                               FontSize="12" 
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding ResultadoEleicao.VotosValidos}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding ResultadoEleicao.PercentualValidosFormatado}" 
                                               FontSize="12" 
                                               Foreground="White"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" 
                                    Background="{DynamicResource WarningBrushDynamic}" 
                                    CornerRadius="5" 
                                    Padding="15" 
                                    Margin="5">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Votos Brancos" 
                                               FontSize="12" 
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding ResultadoEleicao.VotosBrancos}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding ResultadoEleicao.PercentualBrancosFormatado}" 
                                               FontSize="12" 
                                               Foreground="White"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="3" 
                                    Background="{DynamicResource ErrorBrushDynamic}" 
                                    CornerRadius="5" 
                                    Padding="15" 
                                    Margin="5">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Votos Nulos" 
                                               FontSize="12" 
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding ResultadoEleicao.VotosNulos}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding ResultadoEleicao.PercentualNulosFormatado}" 
                                               FontSize="12" 
                                               Foreground="White"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Resultado por Candidato -->
                <Border Background="{DynamicResource CardBrushDynamic}" 
                        BorderBrush="{DynamicResource CardBorderBrushDynamic}" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        IsVisible="{Binding ResultadoEleicao}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="{DynamicResource HeaderBrushDynamic}" 
                                BorderBrush="{DynamicResource DividerBrushDynamic}" 
                                BorderThickness="0,0,0,1" 
                                Padding="20,15">
                            <TextBlock Text="Resultado por Candidato" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrushDynamic}"/>
                        </Border>

                        <ItemsControl Grid.Row="1" 
                                      ItemsSource="{Binding ResultadoEleicao.Candidatos}"
                                      Margin="20">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,10" 
                                            Padding="20" 
                                            Background="{DynamicResource HeaderBrushDynamic}" 
                                            CornerRadius="5"
                                            BorderBrush="{DynamicResource CardBorderBrushDynamic}" 
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" 
                                                    Width="60" 
                                                    Height="60" 
                                                    CornerRadius="30" 
                                                    Background="{DynamicResource PrimaryBrushDynamic}"
                                                    Margin="0,0,15,0">
                                                <TextBlock Text="{Binding Numero}" 
                                                           FontSize="20" 
                                                           FontWeight="Bold" 
                                                           Foreground="White"
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" 
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Nome}" 
                                                           FontSize="16" 
                                                           FontWeight="Bold"
                                                           Foreground="{DynamicResource TextPrimaryBrushDynamic}"/>
                                                <TextBlock Text="{Binding Partido}" 
                                                           FontSize="14" 
                                                           Foreground="{DynamicResource TextSecondaryBrushDynamic}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" 
                                                        HorizontalAlignment="Right" 
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Votos}" 
                                                           FontSize="20" 
                                                           FontWeight="Bold"
                                                           Foreground="{DynamicResource TextPrimaryBrushDynamic}"/>
                                                <TextBlock Text="{Binding PercentualFormatado}" 
                                                           FontSize="14" 
                                                           Foreground="{DynamicResource TextSecondaryBrushDynamic}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Status -->
        <Border Grid.Row="2" 
                Background="{DynamicResource HeaderBrushDynamic}" 
                BorderBrush="{DynamicResource DividerBrushDynamic}" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="14" 
                       Foreground="{DynamicResource TextSecondaryBrushDynamic}"/>
        </Border>
    </Grid>
</UserControl> 