<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UrnaEletronicaFake.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="UrnaEletronicaFake.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Sistema de Urna EletrÃ´nica"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E86AB" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="ðŸ—³ï¸ Sistema de Urna EletrÃ´nica" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="10">
                    <Button Content="ðŸ“Š Admin" 
                            Command="{Binding ShowAdminCommand}"
                            Background="#A23B72" 
                            Foreground="White"
                            Padding="15,8"
                            FontWeight="Bold"/>
                    <Button Content="ðŸ—³ï¸ Votar" 
                            Command="{Binding ShowVotacaoCommand}"
                            Background="#F18F01" 
                            Foreground="White"
                            Padding="15,8"
                            FontWeight="Bold"/>
                    <Button Content="ðŸ“ˆ Resultados" 
                            Command="{Binding ShowResultadosCommand}"
                            Background="#C73E1D" 
                            Foreground="White"
                            Padding="15,8"
                            FontWeight="Bold"/>
                    <Button Content="ðŸ“‹ Auditoria" 
                            Command="{Binding ShowAuditoriaCommand}"
                            Background="#6B5B95" 
                            Foreground="White"
                            Padding="15,8"
                            FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <ContentControl Content="{Binding CurrentView}"/>
            
            <!-- Loading Overlay -->
            <Border Background="#80000000" 
                    IsVisible="{Binding IsLoading}">
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <ProgressRing IsIndeterminate="True" 
                                  Width="50" 
                                  Height="50" 
                                  Foreground="White"/>
                    <TextBlock Text="Carregando..." 
                               Foreground="White" 
                               FontSize="16" 
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#F0F0F0" 
                BorderBrush="#CCCCCC" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="14" 
                       Foreground="#666666"/>
        </Border>
    </Grid>
</Window>
