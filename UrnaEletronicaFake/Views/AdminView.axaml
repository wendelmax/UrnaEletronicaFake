<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:UrnaEletronicaFake.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="UrnaEletronicaFake.Views.AdminView"
             x:DataType="vm:AdminViewModel">

    <UserControl.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="Transparent" 
                Padding="0 0 20 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Painel Administrativo" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="#1e293b"/>
                
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="10">
                    <Button Content="🔄 Atualizar" 
                            Command="{Binding CarregarEleicoesCommand}"
                            Background="#e2e8f0" 
                            Foreground="#1e293b"
                            Padding="15,8"
                            BorderThickness="0"
                            CornerRadius="6"
                            FontWeight="Medium"/>
                    <Button Content="➕ Nova Eleição" 
                            Command="{Binding MostrarFormularioCommand}"
                            Background="#1e3a8a" 
                            Foreground="White"
                            Padding="15,8"
                            BorderThickness="0"
                            CornerRadius="6"
                            FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista de Eleições -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#e5e7eb" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="0,0,10,0"
                    Effect="{DynamicResource MaterialDesignElevationShadow2}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#f8fafc" 
                            BorderBrush="#e5e7eb" 
                            BorderThickness="0,0,0,1" 
                            Padding="20,15">
                        <TextBlock Text="Eleições Cadastradas" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#1f2937"/>
                    </Border>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Eleicoes}" 
                             SelectedItem="{Binding EleicaoSelecionada}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5" 
                                        Padding="20" 
                                        Background="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={x:Null}, ConverterParameter='#f0f9ff;#ffffff'}" 
                                        CornerRadius="8"
                                        BorderBrush="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={x:Null}, ConverterParameter='#3b82f6;#e5e7eb'}" 
                                        BorderThickness="2"
                                        Effect="{DynamicResource MaterialDesignElevationShadow1}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" 
                                                   Text="{Binding Titulo}" 
                                                   FontWeight="Bold" 
                                                   FontSize="16"
                                                   Foreground="#1f2937"/>
                                        
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding Descricao}" 
                                                   Foreground="#6b7280" 
                                                   Margin="0,8,0,0"
                                                   TextWrapping="Wrap"/>
                                        
                                        <StackPanel Grid.Row="2" 
                                                    Orientation="Horizontal" 
                                                    Margin="0,12,0,0"
                                                    Spacing="15">
                                            <Border Background="{Binding Ativa, Converter={x:Null}, ConverterParameter='#dcfce7;#fef2f2'}"
                                                    CornerRadius="12" 
                                                    Padding="8,4">
                                                <TextBlock Text="{Binding Ativa, Converter={x:Null}, ConverterParameter='ATIVA;INATIVA'}" 
                                                           Foreground="{Binding Ativa, Converter={x:Null}, ConverterParameter='#166534;#dc2626'}"
                                                           FontSize="11"
                                                           FontWeight="Bold"/>
                                            </Border>
                                            <TextBlock Text="{Binding DataInicio, StringFormat='Início: {0:dd/MM/yyyy HH:mm}'}" 
                                                       Foreground="#6b7280" 
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding DataFim, StringFormat='Fim: {0:dd/MM/yyyy HH:mm}'}" 
                                                       Foreground="#6b7280" 
                                                       FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="3" 
                                                    Orientation="Horizontal" 
                                                    Margin="0,12,0,0"
                                                    Spacing="8">
                                            <TextBlock Text="{Binding Candidatos.Count, StringFormat='{}{0} candidatos'}" 
                                                       Foreground="#6b7280" 
                                                       FontSize="12"/>
                                            <TextBlock Text="•" 
                                                       Foreground="#6b7280" 
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding DataCriacao, StringFormat='Criada em {0:dd/MM/yyyy}'}" 
                                                       Foreground="#6b7280" 
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Separador -->
            <Border Grid.Column="1" 
                    Width="1" 
                    Background="#e5e7eb" 
                    Margin="10,0"/>

            <!-- Painel de Ações -->
            <StackPanel Grid.Column="2" 
                        Spacing="15">
                
                <!-- Ações da Eleição Selecionada -->
                <Border Background="White" 
                        BorderBrush="#e5e7eb" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20"
                        Effect="{DynamicResource MaterialDesignElevationShadow1}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Ações da Eleição" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Foreground="#1f2937"/>
                        
                        <Border Background="#f8fafc" 
                                BorderBrush="#e5e7eb" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="15"
                                IsVisible="{Binding EleicaoSelecionada, Converter={x:Static ObjectConverters.IsNull}}">
                            <TextBlock Text="Selecione uma eleição para ver as ações disponíveis" 
                                       FontSize="14" 
                                       Foreground="#6b7280"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"/>
                        </Border>
                        
                        <StackPanel IsVisible="{Binding IsEleicaoSelecionada}">
                            <Button Content="✏️ Editar Eleição" 
                                    Command="{Binding EditarEleicaoCommand}"
                                    IsEnabled="{Binding IsEleicaoSelecionada}"
                                    HorizontalAlignment="Stretch" Margin="0 0 0 5" Padding="15,10" CornerRadius="6" FontWeight="Bold"
                                    Background="#f1f5f9" Foreground="#334155"/>
                            
                            <Button Content="👥 Gerenciar Candidatos" 
                                    Command="{Binding GerenciarCandidatosCommand}"
                                    IsEnabled="{Binding IsEleicaoSelecionada}"
                                    HorizontalAlignment="Stretch" Margin="0 0 0 5" Padding="15,10" CornerRadius="6" FontWeight="Bold"
                                    Background="#f1f5f9" Foreground="#334155"/>
                            
                            <Button Content="🏛️ Gerenciar Cargos" 
                                    Command="{Binding GerenciarCargosCommand}"
                                    IsEnabled="{Binding IsEleicaoSelecionada}"
                                    HorizontalAlignment="Stretch" Margin="0 0 0 5" Padding="15,10" CornerRadius="6" FontWeight="Bold"
                                    Background="#f1f5f9" Foreground="#334155"/>
                            
                            <Button Content="✅ Ativar Eleição" 
                                    Command="{Binding AtivarEleicaoCommand}"
                                    IsEnabled="{Binding IsEleicaoSelecionada}"
                                    HorizontalAlignment="Stretch" Margin="0 0 0 5" Padding="15,10" CornerRadius="6" FontWeight="Bold"
                                    Background="#f1f5f9" Foreground="#334155"/>
                            
                            <Button Content="⏸️ Desativar Eleição" 
                                    Command="{Binding DesativarEleicaoCommand}"
                                    IsEnabled="{Binding IsEleicaoSelecionada}"
                                    HorizontalAlignment="Stretch" Margin="0 0 0 5" Padding="15,10" CornerRadius="6" FontWeight="Bold"
                                    Background="#f1f5f9" Foreground="#334155"/>
                            
                            <Button Content="🗑️ Deletar Eleição" 
                                    Command="{Binding DeletarEleicaoCommand}"
                                    IsEnabled="{Binding IsEleicaoSelecionada}"
                                    HorizontalAlignment="Stretch" Margin="0 0 0 5" Padding="15,10" CornerRadius="6" FontWeight="Bold"
                                    Background="#f1f5f9" Foreground="#334155"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Estatísticas Rápidas -->
                <Border Background="White" 
                        BorderBrush="#e5e7eb" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20"
                        Effect="{DynamicResource MaterialDesignElevationShadow1}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Estatísticas" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Foreground="#1f2937"/>
                        
                        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Margin="0,10,0,0">
                            <Border Grid.Column="0" Grid.Row="0" 
                                    Background="#f0f9ff" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="2">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Total" 
                                               FontSize="11" 
                                               Foreground="#0369a1"/>
                                    <TextBlock Text="{Binding Eleicoes.Count}" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="#0ea5e9"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="1" Grid.Row="0" 
                                    Background="#f0fdf4" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="2">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Ativas" 
                                               FontSize="11" 
                                               Foreground="#166534"/>
                                    <TextBlock Text="{Binding EleicoesAtivas}" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="#22c55e"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Status -->
        <Border Grid.Row="2" 
                Background="#f8fafc" 
                BorderBrush="#e5e7eb" 
                BorderThickness="0,1,0,0" 
                Padding="20,12">
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="14" 
                       Foreground="#6b7280"/>
        </Border>

        <!-- Overlay do Formulário -->
        <Border Grid.RowSpan="3"
                Background="#80000000" 
                IsVisible="{Binding MostrarFormulario}">
            <Border Background="White" 
                    CornerRadius="12" 
                    Padding="30"
                    Width="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Effect="{DynamicResource MaterialDesignElevationShadow4}">
                <StackPanel Spacing="20">
                    <TextBlock Text="{Binding FormularioTitulo}" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#1f2937"/>
                    
                    <StackPanel Spacing="15">
                        <StackPanel Spacing="5">
                            <TextBlock Text="Título da Eleição *" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="#374151"/>
                            <TextBox Text="{Binding TituloEleicao}" 
                                     FontSize="14"
                                     Padding="12,8"
                                     Background="#f9fafb"
                                     BorderBrush="#d1d5db"
                                     BorderThickness="1"
                                     CornerRadius="6"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="5">
                            <TextBlock Text="Descrição" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="#374151"/>
                            <TextBox Text="{Binding DescricaoEleicao}" 
                                     FontSize="14"
                                     Padding="12,8"
                                     Background="#f9fafb"
                                     BorderBrush="#d1d5db"
                                     BorderThickness="1"
                                     CornerRadius="6"
                                     AcceptsReturn="True"
                                     Height="80"/>
                        </StackPanel>
                        
                        <Grid ColumnDefinitions="*,*" Margin="0,15,0,0">
                            <StackPanel Grid.Column="0" Spacing="5" Margin="0,0,7,0">
                                <TextBlock Text="Data de Início *" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="#374151"/>
                                <DatePicker SelectedDate="{Binding DataInicio}" 
                                           FontSize="14"
                                           Padding="12,8"
                                           Background="#f9fafb"
                                           BorderBrush="#d1d5db"
                                           BorderThickness="1"
                                           CornerRadius="6"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Spacing="5" Margin="7,0,0,0">
                                <TextBlock Text="Data de Fim *" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="#374151"/>
                                <DatePicker SelectedDate="{Binding DataFim}" 
                                           FontSize="14"
                                           Padding="12,8"
                                           Background="#f9fafb"
                                           BorderBrush="#d1d5db"
                                           BorderThickness="1"
                                           CornerRadius="6"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Spacing="10">
                        <Button Content="Cancelar" 
                                Command="{Binding CancelarFormularioCommand}"
                                Background="#e2e8f0" 
                                Foreground="#1e293b"
                                Padding="20,10"
                                FontWeight="Medium"/>
                        <Button Content="{Binding BotaoSalvarTexto}" 
                                Command="{Binding SalvarEleicaoCommand}"
                                Background="#1e3a8a" 
                                Foreground="White"
                                Padding="20,10"
                                FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Overlay de Gerenciamento de Candidatos -->
        <Border Grid.RowSpan="3"
                Background="#80000000" 
                IsVisible="{Binding MostrarPainelCandidatos}">
            <Border Background="White" 
                    CornerRadius="12" 
                    Padding="30"
                    Width="800"
                    Height="600"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Effect="{DynamicResource MaterialDesignElevationShadow4}">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Spacing="10">
                        <TextBlock Text="Gerenciar Candidatos" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Foreground="#1f2937"/>
                        <TextBlock Text="{Binding EleicaoSelecionada.Titulo}" 
                                   FontSize="16" 
                                   Foreground="#6b7280"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Lista de Candidatos -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,20,0,0">
                        <Border Grid.Column="0" 
                                Background="#f8fafc" 
                                BorderBrush="#e5e7eb" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Margin="0,0,10,0">
                            <Grid RowDefinitions="Auto,*">
                                <Border Grid.Row="0" 
                                        Background="#f1f5f9" 
                                        BorderBrush="#e5e7eb" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="15,10">
                                    <TextBlock Text="Candidatos Cadastrados" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#1f2937"/>
                                </Border>

                                <ListBox Grid.Row="1" 
                                         ItemsSource="{Binding Candidatos}" 
                                         SelectedItem="{Binding CandidatoSelecionado}"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="5" 
                                                    Padding="15" 
                                                    Background="White" 
                                                    CornerRadius="6"
                                                    BorderBrush="#e5e7eb" 
                                                    BorderThickness="1">
                                                <Grid ColumnDefinitions="Auto,*,Auto">
                                                    <Border Grid.Column="0" 
                                                            Background="#1e3a8a" 
                                                            CornerRadius="20" 
                                                            Width="40" 
                                                            Height="40"
                                                            Margin="0,0,15,0">
                                                        <TextBlock Text="{Binding Numero}" 
                                                                   FontSize="16" 
                                                                   FontWeight="Bold"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <StackPanel Grid.Column="1" Spacing="5">
                                                        <TextBlock Text="{Binding Nome}" 
                                                                   FontSize="16" 
                                                                   FontWeight="Bold"
                                                                   Foreground="#1f2937"/>
                                                        <TextBlock Text="{Binding Partido}" 
                                                                   FontSize="14" 
                                                                   Foreground="#6b7280"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="2" 
                                                              Orientation="Horizontal" 
                                                              Spacing="5">
                                                        <Button Content="✏️" 
                                                                Command="{Binding $parent[UserControl].DataContext.EditarCandidatoCommand}"
                                                                Background="#3b82f6"
                                                                Foreground="White"
                                                                Width="32"
                                                                Height="32"
                                                                CornerRadius="16"/>
                                                        <Button Content="🗑️" 
                                                                Command="{Binding $parent[UserControl].DataContext.RemoverCandidatoCommand}"
                                                                Background="#ef4444"
                                                                Foreground="White"
                                                                Width="32"
                                                                Height="32"
                                                                CornerRadius="16"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        <!-- Formulário de Candidato -->
                        <Border Grid.Column="1" 
                                Background="#f8fafc" 
                                BorderBrush="#e5e7eb" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Padding="20"
                                Width="300">
                            <StackPanel Spacing="15">
                                <TextBlock Text="Adicionar Candidato" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="#1f2937"/>
                                
                                <StackPanel Spacing="10">
                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Nome *" 
                                                   FontSize="14" 
                                                   FontWeight="Bold"
                                                   Foreground="#374151"/>
                                        <TextBox Text="{Binding NomeCandidato}" 
                                                 FontSize="14"
                                                 Padding="10,8"
                                                 Background="White"
                                                 BorderBrush="#d1d5db"
                                                 BorderThickness="1"
                                                 CornerRadius="6"/>
                                    </StackPanel>
                                    
                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Partido *" 
                                                   FontSize="14" 
                                                   FontWeight="Bold"
                                                   Foreground="#374151"/>
                                        <TextBox Text="{Binding PartidoCandidato}" 
                                                 FontSize="14"
                                                 Padding="10,8"
                                                 Background="White"
                                                 BorderBrush="#d1d5db"
                                                 BorderThickness="1"
                                                 CornerRadius="6"/>
                                    </StackPanel>
                                    
                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Número *" 
                                                   FontSize="14" 
                                                   FontWeight="Bold"
                                                   Foreground="#374151"/>
                                        <TextBox Text="{Binding NumeroCandidato}" 
                                                 FontSize="14"
                                                 Padding="10,8"
                                                 Background="White"
                                                 BorderBrush="#d1d5db"
                                                 BorderThickness="1"
                                                 CornerRadius="6"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Spacing="8">
                                    <Button Content="➕ Adicionar" 
                                            Command="{Binding AdicionarCandidatoCommand}"
                                            Background="#10b981"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            HorizontalAlignment="Stretch"
                                            Padding="15,10"
                                            CornerRadius="6"/>
                                    <Button Content="✏️ Editar" 
                                            Command="{Binding EditarCandidatoCommand}"
                                            Background="#3b82f6"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            HorizontalAlignment="Stretch"
                                            Padding="15,10"
                                            CornerRadius="6"/>
                                    <Button Content="🗑️ Remover" 
                                            Command="{Binding RemoverCandidatoCommand}"
                                            Background="#ef4444"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            HorizontalAlignment="Stretch"
                                            Padding="15,10"
                                            CornerRadius="6"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Botões de Ação -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Spacing="10"
                                Margin="0,20,0,0">
                        <Button Content="⬅️ Voltar" 
                                Command="{Binding VoltarParaEleicoesCommand}"
                                Background="#6b7280"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="20,10"
                                CornerRadius="6"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Overlay de Gerenciamento de Cargos -->
        <Border Grid.RowSpan="3"
                Background="#80000000" 
                IsVisible="{Binding MostrarPainelCargos}">
            <Border Background="White" 
                    CornerRadius="12" 
                    Padding="30"
                    Width="800"
                    Height="600"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Effect="{DynamicResource MaterialDesignElevationShadow4}">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Spacing="10">
                        <TextBlock Text="Gerenciar Cargos Eleitorais" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Foreground="#1f2937"/>
                        <TextBlock Text="{Binding EleicaoSelecionada.Titulo}" 
                                   FontSize="16" 
                                   Foreground="#6b7280"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Lista de Cargos -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,20,0,0">
                        <Border Grid.Column="0" 
                                Background="#f8fafc" 
                                BorderBrush="#e5e7eb" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Margin="0,0,10,0">
                            <Grid RowDefinitions="Auto,*">
                                <Border Grid.Row="0" 
                                        Background="#f1f5f9" 
                                        BorderBrush="#e5e7eb" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="15,10">
                                    <TextBlock Text="Cargos Cadastrados" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#1f2937"/>
                                </Border>

                                <ListBox Grid.Row="1" 
                                         ItemsSource="{Binding Cargos}" 
                                         SelectedItem="{Binding CargoSelecionado}"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="5" 
                                                    Padding="15" 
                                                    Background="White" 
                                                    CornerRadius="6"
                                                    BorderBrush="#e5e7eb" 
                                                    BorderThickness="1">
                                                <Grid ColumnDefinitions="Auto,*,Auto">
                                                    <Border Grid.Column="0" 
                                                            Background="#059669" 
                                                            CornerRadius="20" 
                                                            Width="40" 
                                                            Height="40"
                                                            Margin="0,0,15,0">
                                                        <TextBlock Text="{Binding Ordem}" 
                                                                   FontSize="16" 
                                                                   FontWeight="Bold"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <StackPanel Grid.Column="1" Spacing="5">
                                                        <TextBlock Text="{Binding Nome}" 
                                                                   FontSize="16" 
                                                                   FontWeight="Bold"
                                                                   Foreground="#1f2937"/>
                                                        <TextBlock Text="{Binding QuantidadeDigitos, StringFormat='{}{0} dígitos'}" 
                                                                   FontSize="14" 
                                                                   Foreground="#6b7280"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="2" 
                                                              Orientation="Horizontal" 
                                                              Spacing="5">
                                                        <Button Content="✏️" 
                                                                Command="{Binding $parent[UserControl].DataContext.EditarCargoCommand}"
                                                                Background="#3b82f6"
                                                                Foreground="White"
                                                                Width="32"
                                                                Height="32"
                                                                CornerRadius="16"/>
                                                        <Button Content="🗑️" 
                                                                Command="{Binding $parent[UserControl].DataContext.RemoverCargoCommand}"
                                                                Background="#ef4444"
                                                                Foreground="White"
                                                                Width="32"
                                                                Height="32"
                                                                CornerRadius="16"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        <!-- Formulário de Cargo -->
                        <Border Grid.Column="1" 
                                Background="#f8fafc" 
                                BorderBrush="#e5e7eb" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Padding="20"
                                Width="300">
                            <StackPanel Spacing="15">
                                <TextBlock Text="Adicionar Cargo" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="#1f2937"/>
                                
                                <StackPanel Spacing="10">
                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Nome do Cargo *" 
                                                   FontSize="14" 
                                                   FontWeight="Bold"
                                                   Foreground="#374151"/>
                                        <TextBox Text="{Binding NomeCargo}" 
                                                 FontSize="14"
                                                 Padding="10,8"
                                                 Background="White"
                                                 BorderBrush="#d1d5db"
                                                 BorderThickness="1"
                                                 CornerRadius="6"/>
                                    </StackPanel>
                                    
                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Quantidade de Dígitos *" 
                                                   FontSize="14" 
                                                   FontWeight="Bold"
                                                   Foreground="#374151"/>
                                        <TextBox Text="{Binding QuantidadeDigitosCargo}" 
                                                 FontSize="14"
                                                 Padding="10,8"
                                                 Background="White"
                                                 BorderBrush="#d1d5db"
                                                 BorderThickness="1"
                                                 CornerRadius="6"/>
                                    </StackPanel>
                                    
                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Ordem *" 
                                                   FontSize="14" 
                                                   FontWeight="Bold"
                                                   Foreground="#374151"/>
                                        <TextBox Text="{Binding OrdemCargo}" 
                                                 FontSize="14"
                                                 Padding="10,8"
                                                 Background="White"
                                                 BorderBrush="#d1d5db"
                                                 BorderThickness="1"
                                                 CornerRadius="6"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Spacing="8">
                                    <Button Content="➕ Adicionar" 
                                            Command="{Binding AdicionarCargoCommand}"
                                            Background="#10b981"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            HorizontalAlignment="Stretch"
                                            Padding="15,10"
                                            CornerRadius="6"/>
                                    <Button Content="✏️ Editar" 
                                            Command="{Binding EditarCargoCommand}"
                                            Background="#3b82f6"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            HorizontalAlignment="Stretch"
                                            Padding="15,10"
                                            CornerRadius="6"/>
                                    <Button Content="🗑️ Remover" 
                                            Command="{Binding RemoverCargoCommand}"
                                            Background="#ef4444"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            HorizontalAlignment="Stretch"
                                            Padding="15,10"
                                            CornerRadius="6"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Botões de Ação -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Spacing="10"
                                Margin="0,20,0,0">
                        <Button Content="⬅️ Voltar" 
                                Command="{Binding VoltarParaEleicoesCommand}"
                                Background="#6b7280"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="20,10"
                                CornerRadius="6"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl> 