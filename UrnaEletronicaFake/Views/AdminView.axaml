<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:UrnaEletronicaFake.ViewModels"
             xmlns:converters="using:UrnaEletronicaFake.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="UrnaEletronicaFake.Views.AdminView"
             x:DataType="vm:AdminViewModel">

    <UserControl.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </UserControl.Styles>

    <UserControl.Resources>
        <converters:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PrimaryBrushDynamic}"
                Padding="20,15">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            Spacing="15" 
                            VerticalAlignment="Center">
                    <TextBlock Text="🏛️" 
                               FontSize="24" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Administração da Urna Eletrônica" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="➕ Nova Eleição" 
                        Command="{Binding MostrarFormularioCommand}"
                        Background="{DynamicResource SurfaceBrushDynamic}"
                        Foreground="{DynamicResource PrimaryBrushDynamic}"
                        Theme="{DynamicResource PrimaryButtonTheme}"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista de Eleições -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource CardBrushDynamic}" 
                    BorderBrush="{DynamicResource CardBorderBrushDynamic}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="0,0,10,0"
                    Effect="{DynamicResource MaterialDesignElevationShadow2}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="{DynamicResource HeaderBrushDynamic}" 
                            BorderBrush="{DynamicResource DividerBrushDynamic}" 
                            BorderThickness="0,0,0,1" 
                            Padding="20,15">
                        <TextBlock Text="Eleições Cadastradas" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrushDynamic}"/>
                    </Border>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Eleicoes}" 
                             SelectedItem="{Binding EleicaoSelecionada}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5" 
                                        Padding="20" 
                                        Background="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={x:Null}, ConverterParameter='#f0f9ff;#ffffff'}" 
                                        CornerRadius="8"
                                        BorderBrush="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={x:Null}, ConverterParameter='#3b82f6;#e5e7eb'}" 
                                        BorderThickness="2"
                                        Effect="{DynamicResource MaterialDesignElevationShadow1}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" 
                                                   Text="{Binding Titulo}" 
                                                   FontWeight="Bold" 
                                                   FontSize="16"
                                                   Foreground="{DynamicResource TextPrimaryBrushDynamic}"/>
                                        
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding Descricao}" 
                                                   Foreground="{DynamicResource TextSecondaryBrushDynamic}" 
                                                   Margin="0,8,0,0"
                                                   TextWrapping="Wrap"/>
                                        
                                        <!-- Informações da Eleição -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0" Spacing="15">
                                            <Border Background="{Binding Ativa, Converter={StaticResource BoolToBackgroundConverter}}" CornerRadius="12" Padding="8,4">
                                                <TextBlock Text="{Binding Ativa, Converter={StaticResource BoolToStatusConverter}}" Foreground="{Binding Ativa, Converter={StaticResource BoolToColorConverter}}" FontSize="11" FontWeight="Bold"/>
                                            </Border>
                                            <TextBlock Text="{Binding DataInicio, StringFormat='Início: {0:dd/MM/yyyy HH:mm}'}" Foreground="{DynamicResource TextSecondaryBrushDynamic}" FontSize="12"/>
                                            <TextBlock Text="{Binding DataFim, StringFormat='Fim: {0:dd/MM/yyyy HH:mm}'}" Foreground="{DynamicResource TextSecondaryBrushDynamic}" FontSize="12"/>
                                        </StackPanel>

                                        <!-- Contadores e Data -->
                                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,12,0,0" Spacing="8">
                                            <TextBlock Text="{Binding Candidatos.Count, StringFormat='{}{0} candidatos'}" Foreground="{DynamicResource TextSecondaryBrushDynamic}" FontSize="12"/>
                                            <TextBlock Text="•" Foreground="{DynamicResource TextSecondaryBrushDynamic}" FontSize="12" IsVisible="{Binding CargosEleitorais.Count}"/>
                                            <TextBlock Text="{Binding CargosEleitorais.Count, StringFormat='{}{0} cargos'}" Foreground="{DynamicResource TextSecondaryBrushDynamic}" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Separador -->
            <Border Grid.Column="1" 
                    Width="1" 
                    Background="{DynamicResource DividerBrushDynamic}" 
                    Margin="10,0"/>

            <!-- Painel de Ações -->
            <StackPanel Grid.Column="2" 
                        Spacing="15">
                
                <!-- Ações da Eleição Selecionada -->
                <Border Background="{DynamicResource CardBrushDynamic}" 
                        BorderBrush="{DynamicResource CardBorderBrushDynamic}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20"
                        Effect="{DynamicResource MaterialDesignElevationShadow1}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Ações da Eleição" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextPrimaryBrushDynamic}"/>
                        
                        <TextBlock Text="Selecione uma eleição para ver as ações" IsVisible="{Binding !IsEleicaoSelecionada}" Foreground="{DynamicResource TextSecondaryBrushDynamic}" FontSize="12" HorizontalAlignment="Center"/>
                        
                        <StackPanel Spacing="8" IsVisible="{Binding IsEleicaoSelecionada}">
                            <Button Content="✏️ Editar Detalhes" Command="{Binding EditarEleicaoCommand}" Theme="{DynamicResource PrimaryButtonTheme}" HorizontalAlignment="Stretch"/>
                            <Button Content="👥 Gerenciar Candidatos" Command="{Binding GerenciarCandidatosCommand}" Theme="{DynamicResource SecondaryButtonTheme}" HorizontalAlignment="Stretch"/>
                            <Button Content="🏛️ Gerenciar Cargos" Command="{Binding GerenciarCargosCommand}" Theme="{DynamicResource SecondaryButtonTheme}" HorizontalAlignment="Stretch"/>
                            
                            <Button Content="▶️ Ativar Eleição" 
                                    Command="{Binding AtivarEleicaoCommand}"
                                    Background="{DynamicResource SuccessBrushDynamic}"
                                    Foreground="White"
                                    HorizontalAlignment="Stretch"/>
                            
                            <Button Content="⏸️ Pausar Eleição" 
                                    Command="{Binding DesativarEleicaoCommand}"
                                    Background="{DynamicResource WarningBrushDynamic}"
                                    Foreground="White"
                                    HorizontalAlignment="Stretch"/>
                            
                            <Button Content="🗑️ Excluir Eleição" 
                                    Command="{Binding DeletarEleicaoCommand}"
                                    Background="{DynamicResource ErrorBrushDynamic}"
                                    Foreground="White"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Status -->
        <Border Grid.Row="2" 
                Background="#f8fafc" 
                BorderBrush="#e5e7eb" 
                BorderThickness="0,1,0,0" 
                Padding="20,12">
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="14" 
                       Foreground="#6b7280"/>
        </Border>

        <!-- Overlay do Formulário -->
        <Border Grid.RowSpan="3"
                Background="#80000000" 
                IsVisible="{Binding MostrarFormulario}">
            <Border Background="White" 
                    CornerRadius="12" 
                    Padding="30"
                    Width="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Effect="{DynamicResource MaterialDesignElevationShadow4}">
                <StackPanel Spacing="20">
                    <TextBlock Text="{Binding FormularioTitulo}" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#1f2937"/>
                    
                    <StackPanel Spacing="15">
                        <StackPanel Spacing="5">
                            <TextBlock Text="Título da Eleição *" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="#374151"/>
                            <TextBox Text="{Binding TituloEleicao}" 
                                     FontSize="14"
                                     Padding="12,8"
                                     Background="#f9fafb"
                                     BorderBrush="#d1d5db"
                                     BorderThickness="1"
                                     CornerRadius="6"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="5">
                            <TextBlock Text="Descrição" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="#374151"/>
                            <TextBox Text="{Binding DescricaoEleicao}" 
                                     FontSize="14"
                                     Padding="12,8"
                                     Background="#f9fafb"
                                     BorderBrush="#d1d5db"
                                     BorderThickness="1"
                                     CornerRadius="6"
                                     AcceptsReturn="True"
                                     Height="80"/>
                        </StackPanel>
                        
                        <Grid ColumnDefinitions="*,*" Margin="0,15,0,0">
                            <StackPanel Grid.Column="0" Spacing="5" Margin="0,0,7,0">
                                <TextBlock Text="Data de Início *" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="#374151"/>
                                <DatePicker SelectedDate="{Binding DataInicio}" 
                                           FontSize="14"
                                           Padding="12,8"
                                           Background="#f9fafb"
                                           BorderBrush="#d1d5db"
                                           BorderThickness="1"
                                           CornerRadius="6"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Spacing="5" Margin="7,0,0,0">
                                <TextBlock Text="Data de Fim *" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="#374151"/>
                                <DatePicker SelectedDate="{Binding DataFim}" 
                                           FontSize="14"
                                           Padding="12,8"
                                           Background="#f9fafb"
                                           BorderBrush="#d1d5db"
                                           BorderThickness="1"
                                           CornerRadius="6"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Spacing="10">
                        <Button Content="Cancelar" 
                                Command="{Binding CancelarFormularioCommand}"
                                Background="#e2e8f0" 
                                Foreground="#1e293b"
                                Padding="20,10"
                                FontWeight="Medium"/>
                        <Button Content="{Binding BotaoSalvarTexto}" 
                                Command="{Binding SalvarEleicaoCommand}"
                                Background="#1e3a8a" 
                                Foreground="White"
                                Padding="20,10"
                                FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Overlay de Gerenciamento de Candidatos -->
        <Border Grid.RowSpan="3"
                Background="#80000000" 
                IsVisible="{Binding MostrarPainelCandidatos}">
            <Border Background="White" 
                    CornerRadius="12" 
                    Padding="30"
                    Width="800"
                    Height="600"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Effect="{DynamicResource MaterialDesignElevationShadow4}">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Spacing="10">
                        <TextBlock Text="Gerenciar Candidatos" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Foreground="#1f2937"/>
                        <TextBlock Text="{Binding EleicaoSelecionada.Titulo}" 
                                   FontSize="16" 
                                   Foreground="#6b7280"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Lista de Candidatos -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,20,0,0">
                        <Border Grid.Column="0" 
                                Background="#f8fafc" 
                                BorderBrush="#e5e7eb" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Margin="0,0,10,0">
                            <Grid RowDefinitions="Auto,*">
                                <Border Grid.Row="0" 
                                        Background="#f1f5f9" 
                                        BorderBrush="#e5e7eb" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="15,10">
                                    <TextBlock Text="Candidatos Cadastrados" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#1f2937"/>
                                </Border>

                                <ListBox Grid.Row="1" 
                                         ItemsSource="{Binding Candidatos}" 
                                         SelectedItem="{Binding CandidatoSelecionado}"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="5" 
                                                    Padding="15" 
                                                    Background="White" 
                                                    CornerRadius="6"
                                                    BorderBrush="#e5e7eb" 
                                                    BorderThickness="1">
                                                <Grid ColumnDefinitions="Auto,*,Auto">
                                                    <Border Grid.Column="0" 
                                                            Background="#1e3a8a" 
                                                            CornerRadius="20" 
                                                            Width="40" 
                                                            Height="40"
                                                            Margin="0,0,15,0">
                                                        <TextBlock Text="{Binding Numero}" 
                                                                   FontSize="16" 
                                                                   FontWeight="Bold"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <StackPanel Grid.Column="1" Spacing="5">
                                                        <TextBlock Text="{Binding Nome}" 
                                                                   FontSize="16" 
                                                                   FontWeight="Bold"
                                                                   Foreground="#1f2937"/>
                                                        <TextBlock Text="{Binding Partido}" 
                                                                   FontSize="14" 
                                                                   Foreground="#6b7280"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="2" 
                                                              Orientation="Horizontal" 
                                                              Spacing="5">
                                                        <Button Content="✏️" 
                                                                Command="{Binding $parent[UserControl].DataContext.EditarCandidatoCommand}"
                                                                Background="#3b82f6"
                                                                Foreground="White"
                                                                Width="32"
                                                                Height="32"
                                                                CornerRadius="16"/>
                                                        <Button Content="🗑️" 
                                                                Command="{Binding $parent[UserControl].DataContext.RemoverCandidatoCommand}"
                                                                Background="#ef4444"
                                                                Foreground="White"
                                                                Width="32"
                                                                Height="32"
                                                                CornerRadius="16"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        <!-- Coluna Direita: Formulário e Ações -->
                        <StackPanel Grid.Column="1" Spacing="15" Width="320">
                            
                            <!-- Botão para Adicionar Novo Candidato -->
                            <Button Content="➕ Adicionar Novo Candidato"
                                    Command="{Binding AdicionarCandidatoCommand}"
                                    IsVisible="{Binding !MostrarFormularioCandidato}"
                                    Theme="{DynamicResource SuccessButtonTheme}"
                                    HorizontalAlignment="Stretch"
                                    Padding="15,10"/>

                            <!-- Formulário de Candidato -->
                            <Border Background="#f8fafc" 
                                    BorderBrush="#e5e7eb" 
                                    BorderThickness="1" 
                                    CornerRadius="8" 
                                    Padding="20"
                                    IsVisible="{Binding MostrarFormularioCandidato}">
                                <StackPanel Spacing="15">
                                    <TextBlock Text="{Binding FormularioCandidatoTitulo}" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#1f2937"/>
                                    
                                    <StackPanel Spacing="10">
                                        <!-- Campo Nome -->
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="Nome *" FontWeight="Bold" Foreground="#374151"/>
                                            <TextBox Text="{Binding NomeCandidato}" Theme="{DynamicResource FormTextBoxTheme}"/>
                                        </StackPanel>
                                        
                                        <!-- Campo Partido -->
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="Partido *" FontWeight="Bold" Foreground="#374151"/>
                                            <TextBox Text="{Binding PartidoCandidato}" Theme="{DynamicResource FormTextBoxTheme}"/>
                                        </StackPanel>
                                        
                                        <!-- Campo Número -->
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="Número *" FontWeight="Bold" Foreground="#374151"/>
                                            <TextBox Text="{Binding NumeroCandidato}" Theme="{DynamicResource FormTextBoxTheme}"/>
                                        </StackPanel>

                                        <!-- Campo Cargo -->
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="Cargo *" FontWeight="Bold" Foreground="#374151"/>
                                            <ComboBox ItemsSource="{Binding Cargos}"
                                                      SelectedItem="{Binding CargoCandidatoSelecionado}"
                                                      DisplayMemberBinding="{Binding Nome}"
                                                      PlaceholderText="Selecione um cargo"
                                                      HorizontalAlignment="Stretch"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Botões de Ação do Formulário -->
                                    <StackPanel Spacing="8">
                                        <Button Content="{Binding BotaoSalvarCandidatoTexto}" 
                                                Command="{Binding SalvarCandidatoCommand}"
                                                Theme="{DynamicResource SuccessButtonTheme}"
                                                HorizontalAlignment="Stretch"/>
                                        <Button Content="Cancelar" 
                                                Command="{Binding CancelarCandidatoCommand}"
                                                Theme="{DynamicResource SecondaryButtonTheme}"
                                                HorizontalAlignment="Stretch"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Botão para Voltar -->
                    <Button Grid.Row="2" 
                            Content="Voltar para Eleições" 
                            Command="{Binding VoltarParaEleicoesCommand}"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0"
                            Theme="{DynamicResource PrimaryButtonTheme}"/>
                </Grid>
            </Border>
        </Border>

        <!-- Overlay de Gerenciamento de Cargos -->
        <Border Grid.RowSpan="3"
                Background="#80000000" 
                IsVisible="{Binding MostrarPainelCargos}">
            <Border Background="White" 
                    CornerRadius="12" 
                    Padding="30"
                    Width="800"
                    Height="600"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Effect="{DynamicResource MaterialDesignElevationShadow4}">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Spacing="10">
                        <TextBlock Text="Gerenciar Cargos Eleitorais" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Foreground="#1f2937"/>
                        <TextBlock Text="{Binding EleicaoSelecionada.Titulo}" 
                                   FontSize="16" 
                                   Foreground="#6b7280"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Lista de Cargos -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,20,0,0">
                        <Border Grid.Column="0" 
                                Background="#f8fafc" 
                                BorderBrush="#e5e7eb" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Margin="0,0,10,0">
                            <Grid RowDefinitions="Auto,*">
                                <Border Grid.Row="0" 
                                        Background="#f1f5f9" 
                                        BorderBrush="#e5e7eb" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="15,10">
                                    <TextBlock Text="Cargos Cadastrados" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#1f2937"/>
                                </Border>

                                <ListBox Grid.Row="1" 
                                         ItemsSource="{Binding Cargos}" 
                                         SelectedItem="{Binding CargoSelecionado}"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="5" 
                                                    Padding="15" 
                                                    Background="White" 
                                                    CornerRadius="6"
                                                    BorderBrush="#e5e7eb" 
                                                    BorderThickness="1">
                                                <Grid ColumnDefinitions="*,Auto,Auto">
                                                    <StackPanel Grid.Column="0" Spacing="5">
                                                        <TextBlock Text="{Binding Nome}" 
                                                                   FontSize="16" 
                                                                   FontWeight="Bold"
                                                                   Foreground="#1f2937"/>
                                                        <TextBlock Text="{Binding QuantidadeDigitos, StringFormat='{}{0} dígitos'}" 
                                                                   FontSize="14" 
                                                                   Foreground="#6b7280"/>
                                                    </StackPanel>
                                                    
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding Ordem, StringFormat='Ordem: {0}'}" 
                                                               FontSize="14" 
                                                               VerticalAlignment="Center"
                                                               Foreground="#6b7280"/>

                                                    <StackPanel Grid.Column="2" 
                                                              Orientation="Horizontal" 
                                                              Spacing="5"
                                                              Margin="20,0,0,0">
                                                        <Button Content="✏️" 
                                                                Command="{Binding $parent[UserControl].DataContext.EditarCargoCommand}"
                                                                Background="#3b82f6"
                                                                Foreground="White"
                                                                Width="32"
                                                                Height="32"
                                                                CornerRadius="16"/>
                                                        <Button Content="🗑️" 
                                                                Command="{Binding $parent[UserControl].DataContext.RemoverCargoCommand}"
                                                                Background="#ef4444"
                                                                Foreground="White"
                                                                Width="32"
                                                                Height="32"
                                                                CornerRadius="16"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        <!-- Coluna Direita: Formulário e Ações -->
                        <StackPanel Grid.Column="1" Spacing="15" Width="320">
                            
                            <!-- Botão para Adicionar Novo Cargo -->
                            <Button Content="➕ Adicionar Novo Cargo"
                                    Command="{Binding AdicionarCargoCommand}"
                                    IsVisible="{Binding !MostrarFormularioCargo}"
                                    Theme="{DynamicResource SuccessButtonTheme}"
                                    HorizontalAlignment="Stretch"
                                    Padding="15,10"/>

                            <!-- Formulário de Cargo -->
                            <Border Background="#f8fafc" 
                                    BorderBrush="#e5e7eb" 
                                    BorderThickness="1" 
                                    CornerRadius="8" 
                                    Padding="20"
                                    IsVisible="{Binding MostrarFormularioCargo}">
                                <StackPanel Spacing="15">
                                    <TextBlock Text="{Binding FormularioCargoTitulo}" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#1f2937"/>
                                    
                                    <StackPanel Spacing="10">
                                        <!-- Campo Nome do Cargo -->
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="Nome do Cargo *" FontWeight="Bold" Foreground="#374151"/>
                                            <TextBox Text="{Binding NomeCargo}" Theme="{DynamicResource FormTextBoxTheme}"/>
                                        </StackPanel>
                                        
                                        <!-- Campo Quantidade de Dígitos -->
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="Quantidade de Dígitos *" FontWeight="Bold" Foreground="#374151"/>
                                            <TextBox Text="{Binding QuantidadeDigitosCargo}" Theme="{DynamicResource FormTextBoxTheme}"/>
                                        </StackPanel>

                                        <!-- Campo Ordem de Aparição -->
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="Ordem de Aparição *" FontWeight="Bold" Foreground="#374151"/>
                                            <TextBox Text="{Binding OrdemCargo}" Theme="{DynamicResource FormTextBoxTheme}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Botões de Ação do Formulário -->
                                    <StackPanel Spacing="8">
                                        <Button Content="{Binding BotaoSalvarCargoTexto}" 
                                                Command="{Binding SalvarCargoCommand}"
                                                Theme="{DynamicResource SuccessButtonTheme}"
                                                HorizontalAlignment="Stretch"/>
                                        <Button Content="Cancelar" 
                                                Command="{Binding CancelarCargoCommand}"
                                                Theme="{DynamicResource SecondaryButtonTheme}"
                                                HorizontalAlignment="Stretch"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Botão para Voltar -->
                    <Button Grid.Row="2" 
                            Content="Voltar para Eleições" 
                            Command="{Binding VoltarParaEleicoesCommand}"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0"
                            Theme="{DynamicResource PrimaryButtonTheme}"/>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl> 